<Window x:Class="cubeStore.Articulos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:cubeStore"
        mc:Ignorable="d"
        Title="Usuarios" Height="600" Width="834"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Loaded="Window_Loaded">
    <StackPanel>

        <Grid Height="80" VerticalAlignment="Top" Background="#EA5555">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="1"/>
            </Grid.Effect>
            <Image Source="imagenes/cubestore.png" HorizontalAlignment="Left" Margin="10 0" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0">
                <Button Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnCerrarArticulos_Click" x:Name="btnCerrarArticulos">
                    <materialDesign:PackIcon Kind="Close" Width="30" Height="30"/>
                </Button>
            </StackPanel>
            <TextBlock FontWeight="Bold" Text="Articulos" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20" Height="44" Margin="341,26,359,10" Width="134"/>
        </Grid>

        <StackPanel Orientation="Horizontal" Height="520">

            <Grid Height="510" Width="380" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#EA5555" Margin="5">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="1"/>
                </Grid.Effect>
                <Grid VerticalAlignment="Center" Margin="10" Height="490" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="447*"/>
                    </Grid.RowDefinitions>
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="1"/>
                    </Grid.Effect>
                    <StackPanel Margin="15" Grid.RowSpan="2">
                        <TextBlock Text="ADMINISTRAR ARTICULOS" HorizontalAlignment="Center" FontWeight="Bold" FontSize="15" FontFamily="Champagne &amp; Limousines" Height="41" Margin="45,0"/>
                        <TextBox FontWeight="Bold" Margin="0,10" IsEnabled="False" materialDesign:HintAssist.Hint="NOMBRE DEL ARTICULO" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="12" x:Name="txtnombreArticulo"/>
                        <TextBlock Text="CATEGORIA" HorizontalAlignment="Left" Margin="5" FontWeight="Bold" FontSize="12" FontFamily="Champagne &amp; Limousines" Height="34" />

                        <ComboBox IsEnabled="False" FontSize="15" FontWeight="Bold" x:Name="cbxCategoria"/>
                        <TextBlock Text="PROVEDOR" HorizontalAlignment="Left" Margin="5" FontWeight="Bold" FontSize="12" FontFamily="Champagne &amp; Limousines" Height="34"/>
                        <ComboBox IsEnabled="False" x:Name="cbxProvedor" FontSize="15" FontWeight="Bold"/>
                        <Grid VerticalAlignment="Bottom" Height="170">
                            <Button Content="MODIFICAR" Click="BtnModificar_Click" x:Name="btnModificar" FontWeight="Bold" Background="#004E6F" Margin="181,68,10,70"/>
                            <Button Content="AGREGAR"  Click="BtnAgregar_Click" x:Name="btnAgregar" FontWeight="Bold" Background="#004E6F" Margin="10,10,10,108"/>
                            <Button Content="ELIMINAR" Click="BtnEliminar_Click" x:Name="btnEliminar" FontWeight="Bold" Background="#004E6F" Margin="10,68,189,70"/>
                            <Button Content="GUARDAR" Click="BtnGuardarAccion_Click" x:Name="btnGuardarAccion" IsEnabled="False" FontWeight="Bold" Background="#004E6F" Margin="10,118,189,20"/>
                            <Button Content="CANCELAR" Click="BtnCancelar_Click" x:Name="btnCancelar" IsEnabled="False" FontWeight="Bold" Background="#004E6F" Margin="181,118,10,20"/>
                        </Grid>

                    </StackPanel>
                </Grid>
            </Grid>

            <Grid  VerticalAlignment="Top" Height="510" Width="432" Background="#EA5555" Margin="5,5,5,0">
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="1"/>
                </Grid.Effect>
                <Grid VerticalAlignment="Bottom" Margin="10,0,10,10" Height="272" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="26*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="447*"/>
                    </Grid.RowDefinitions>
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="1"/>
                    </Grid.Effect>
                    <StackPanel Margin="15" Grid.RowSpan="2" Grid.ColumnSpan="2">
                        <TextBlock Foreground="Black" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center"  FontFamily="Champagne &amp; Limousines" TextWrapping="Wrap" Text="LISTA DE ARTICULOS" VerticalAlignment="Top"/>
                        <DataGrid  SelectionChanged="DgdDatos_SelectionChanged" CanUserAddRows="False" IsReadOnly="True" Height="220" VerticalAlignment="Top" Margin="0,10" x:Name="dgdDatos" SelectionMode="Single"/>
                    </StackPanel>

                </Grid>
            </Grid>

        </StackPanel>
    </StackPanel>
</Window>
